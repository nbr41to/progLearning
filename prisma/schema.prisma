  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  email     String   @unique
  plan      Plan     @default(free)
  lastLogin DateTime
